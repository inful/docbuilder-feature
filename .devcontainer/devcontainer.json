{
    "image": "mcr.microsoft.com/devcontainers/javascript-node:4-22",
    "features": {
        "ghcr.io/inful/docbuilder-feature/docbuilder:latest": {
            "httpProxy": "${localEnv:HTTP_PROXY}",
            "httpsProxy": "${localEnv:HTTP_PROXY}",
            "noProxy": "${localEnv:NO_PROXY}"
        }
    },
    "forwardPorts": [1316, 1319],
    "portsAttributes": {
        "1316": {
            "label": "DocBuilder Preview",
            "onAutoForward": "notify"
        },
        "1319": {
            "label": "DocBuilder LiveReload",
            "onAutoForward": "silent"
        }
    },
    "containerEnv": {
        "http_proxy": "${localEnv:HTTP_PROXY}",
        "https_proxy": "${localEnv:HTTP_PROXY}",
        "HTTP_PROXY": "${localEnv:HTTP_PROXY}",
        "HTTPS_PROXY": "${localEnv:HTTP_PROXY}",
        "NO_PROXY": "${localEnv:NO_PROXY}"
    },
    "postCreateCommand": "npm install -g @devcontainers/cli",
    "customizations": {
        "vscode": {
            "extensions": [
                "mads-hartmann.bash-ide-vscode"
            ]
        }
    }
}