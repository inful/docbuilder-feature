{
    "id": "docbuilder",
    "version": "0.2.0",
    "name": "DocBuilder and Hugo Extended",
    "documentationURL": "https://github.com/inful/docbuilder-feature",
    "description": "Installs docbuilder and hugo extended binaries.",
    "licenseURL": "https://github.com/inful/docbuilder-feature/blob/main/LICENSE",
    "keywords": [
        "docbuilder",
        "hugo",
        "documentation",
        "static-site-generator"
    ],
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ],
    "options": {
        "docbuilderVersion": {
            "type": "string",
            "proposals": [
                "0.1.46",
                "latest"
            ],
            "default": "0.1.46",
            "description": "Version of docbuilder to install."
        },
        "hugoVersion": {
            "type": "string",
            "proposals": [
                "0.154.1",
                "latest"
            ],
            "default": "0.154.1",
            "description": "Version of hugo (extended) to install."
        },
        "autoPreview": {
            "type": "boolean",
            "default": true,
            "description": "Automatically start docbuilder preview server when container starts."
        },
        "httpProxy": {
            "type": "string",
            "default": "",
            "description": "HTTP proxy URL for downloading binaries (e.g., http://proxy.example.com:3128)"
        },
        "httpsProxy": {
            "type": "string",
            "default": "",
            "description": "HTTPS proxy URL for downloading binaries (e.g., http://proxy.example.com:3128)"
        },
        "noProxy": {
            "type": "string",
            "default": "",
            "description": "Comma-separated list of hosts to exclude from proxying (e.g., localhost,127.0.0.1,.example.com)"
        }
    }
}
